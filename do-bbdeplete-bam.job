cd $WHERE
[ -f $FS.fastq ] || samtools fastq -T RX $F1 > $FS.fastq
/home/bmaust/local/bbmap_39.06/bbmap.sh ref=/home/bmaust/human_virus-masked.fasta in=$FS.fastq qtrim=rl trimq=20 keepnames=T outm=${FS}_humap.bam outu=${FS}_nohu.fastq statsfile=${FS}_hu_refstats
