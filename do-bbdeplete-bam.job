#!/bin/bash
#SBATCH -q public
#SBATCH -p general
#SBATCH -N 1
#SBATCH -c 32
#SBATCH -t 0-12:00:00
#SBATCH --mem=64G
#SBATCH -o slurm.bbmap.%j.out
